@model LeaderBoardService.Models.HomeDTO
@section Style{
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }

        .profile-photo {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            width: 150px;
        }

        th, td {
            border-bottom: 1px solid #dee2e6;
            padding: 0.5em;
            text-align: left;
            vertical-align: top;
            font-weight: normal;
        }

        .scrollable thead,
        .scrollable tfoot,
        .scrollable tbody,
        .scrollable th,
        .scrollable td {
            display: block;
            width: 100%;
        }

        .scrollable tbody {
            overflow-y: scroll;
        }

        .scrollable thead,
        .scrollable tfoot {
            -ms-overflow-style: none;
        }

            .scrollable thead::-webkit-scrollbar,
            .scrollable tfoot::-webkit-scrollbar {
                visibility: hidden;
            }

        .scrollable tbody {
            max-height: 69.6vh;
            position: relative;
            -ms-overflow-style: -ms-autohiding-scrollbar;
        }

        .scrollable tr {
            display: flex;
        }

        .scrollable tbody th,
        .scrollable tbody td {
            border-top: none;
        }

        .scrollable th:not(:last-child),
        .scrollable td:not(:last-child) {
            border-right: none;
        }


        body {
            margin: 0
        }

        .gm-svpc {
            display: none;
        }
    </style>
}



@section Scripts{
    <script src="~/js/dynamitable.jquery.min.js"></script>
    <script src="~/js/html2csv.js"></script>
}


<div class="row" style="margin: 10px 0;">
    <div class="col-md-12 col-sm-12 mb-5" style="padding-right: 10px;
        padding-left: 20px;">


        <div class="bd-example">
            <a href="@Url.Action("GetCSV","Home")" type="button" class="btn btn-primary">
                CSV Faylı yükLə
            </a>
        </div>

        <div class="table-responsive ">
            <table id="leaderboard" class="js-dynamitable  table scrollable ">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        @* <th scope="col">Şəkil</th>*@
                        <th scope="col">AD</th>
                        <th scope="col">Telefon Nömrəsi</th>
                        <th scope="col">Maksimal Xalı</th>
                        <th scope="col">Yeri</th>
                        <th scope="col">Vaxtı</th>
                        <th scope="col">#</th>
                    </tr>
                    <tr>
                        <th>
                            @*<input class="js-filter  form-control" type="text" value="">*@
                        </th>

                        <th>
                            <input class="js-filter  form-control" type="text" value="">
                        </th>
                        <th>
                            <input class="js-filter  form-control" type="text" value="">
                        </th>
                        <th>
                            <input class="js-filter  form-control" type="text" value="">
                        </th>
                        <th>
                            <input class="js-filter  form-control" type="text" value="">
                        </th>
                        <th>
                            <input class="js-filter  form-control" type="date" value="">
                        </th>
                        <th>

                        </th>
                    </tr>

                </thead>
                <tbody id="myTable">
                    @for (int i = 0; i < Model.userData.Count; i++)
                    {
                        var item = Model.userData[i];

                        <tr id="@item.UserFBID">

                            <td scope="row" style="display:flex; justify-content:space-between; align-items:center">@item.UserFBID</td>

                            @* <td scope="row" style="display:flex; justify-content:space-between; align-items:center"><img class="profile-photo" src=" @item.UserPhoto" alt="@item.UserName" /></td>*@

                            <td scope="row" style="display:flex; justify-content:space-between; align-items:center">@item.UserName</td>

                            <td scope="row" style="display:flex; justify-content:space-between; align-items:center"> @item.UserTelNumber </td>

                            <td scope="row" style="display:flex; justify-content:space-between; align-items:center"> @item.AverageScore</td>

                            <td scope="row" style="display:flex; justify-content:space-between; align-items:center"> @item.Rank</td>

                            <td scope="row" style="display:flex; justify-content:space-between; align-items:center"> @item.ScoreTime.AddHours(4)</td>

                            <td scope="row" style="display:flex; justify-content:space-between; align-items:center"><a href="@Url.Action("Show", "Home", new {  userID = item.UserId }, null)"><i class="fab fa-sistrix"></i></a></td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>

</div>
